<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.mdjahirulislam.weatherapptest.CurrentWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_margin="0dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:orientation="horizontal"
            android:layout_margin="05dp"
            android:padding="0dp">
            <ImageView
                android:id="@+id/imageCode"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/toDaysConditionTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Weather Condition"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textAllCaps="false"
                android:textSize="29sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/maxTempTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="High"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/minTempTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Low"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_margin="0dp">

            <TextView
                android:id="@+id/tempTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0Â°"
                android:textColor="#ffffff"
                android:textSize="90sp"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:gravity="bottom"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_mylocation"/>

            <TextView
                android:id="@+id/currentLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Current location "
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:layout_gravity="left"/>

        </LinearLayout>





    </LinearLayout>





</FrameLayout>
